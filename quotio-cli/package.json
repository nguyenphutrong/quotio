{
  "name": "quotio-cli",
  "version": "0.1.0",
  "description": "Cross-platform CLI for managing CLIProxyAPI - quota tracking, agent configuration, and proxy management",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "quotio": "./dist/quotio"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/quotio",
    "build:all": "bun run scripts/build.ts",
    "download-proxy": "bun run scripts/download-proxy.ts",
    "download-proxy:current": "bun run scripts/download-proxy.ts --platform $(uname -m | sed 's/x86_64/x64/' | sed 's/aarch64/arm64/' | xargs -I {} echo darwin-{})",
    "test": "bun test",
    "lint": "bunx @biomejs/biome check src/",
    "format": "bunx @biomejs/biome format --write src/"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@biomejs/biome": "^1.9.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "keywords": [
    "cli",
    "ai",
    "proxy",
    "quota",
    "claude",
    "gemini",
    "copilot"
  ],
  "author": "Quotio Team",
  "license": "MIT"
}
